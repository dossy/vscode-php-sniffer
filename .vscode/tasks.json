// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "dependsOn": [
                "compile",
                "unit tests"
            ],
            "problemMatcher": []
        },
        {
            "label": "compile",
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "group": "watch"
            }
        },
        {
            "label": "unit tests",
            "type": "shell",
            "command": "npm run test:unit -- --watch",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "group": "watch"
            }
        }
    ]
}
